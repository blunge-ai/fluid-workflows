{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    // "target": "es2022",
    "target": "esnext",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    // "checkJs": true,
    /* Bundled projects */
    "lib": [
      "ES2022"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "plugins": [
      { "name": "typescript-eslint-language-service" }
    ],
    "incremental": false,
    "outDir": "./dist",
    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ]
    }
  },
  "typeAcquisition": {
    "enable": false
  },
  "include": [
    "eslint.config.mjs",
    "**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
