{
  "name": "@blunge/fluid-workflows",
  "version": "0.16.0",
  "private": false,
  "type": "module",
  "description": "Type-safe workflow building + job-queue execution with adapters.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blunge-ai/fluid-workflows.git"
  },
  "bugs": {
    "url": "https://github.com/blunge-ai/fluid-workflows/issues"
  },
  "homepage": "https://github.com/blunge-ai/fluid-workflows#readme",
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --sourcemap --clean --out-dir dist",
    "tsc": "tsc",
    "lint": "eslint",
    "test-watch": "vitest --config ./vitest.config.ts",
    "test": "vitest --config ./vitest.config.ts --run",
    "test:cloudflare": "vitest --config ./vitest.cloudflare.config.ts --run",
    "test:cloudflare-watch": "vitest --config ./vitest.cloudflare.config.ts",
    "release:minor": "npm run build && npm version minor -m \"chore(release): %s\" && git push --follow-tags && npm publish --access public"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.8.0",
    "@cloudflare/workers-types": "^4.20250109.0",
    "@eslint/js": "^9.19.0",
    "@types/eslint": "^9.6.1",
    "@types/node": "^18.17.0",
    "eslint": "^9.19.0",
    "bullmq": "^5.10.4",
    "ioredis": "^5.4.2",
    "tsup": "^8.1.0",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.22.0",
    "vitest": "^2.1.2",
    "wrangler": "^4.0.0",
    "zod": "^4.1.8"
  },
  "dependencies": {
    "msgpackr": "^1.11.2",
    "uuid": "^11.0.5"
  },
  "peerDependencies": {
    "bullmq": "^5.10.4",
    "ioredis": "^5.4.2",
    "zod": "^3.0.0 || ^4.0.0"
  }
}
